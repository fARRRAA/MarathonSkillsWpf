<Page x:Class="MarathonSkillsApp.Pages.MySponsorshipPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkillsApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="My Sponsors - Marathon Skills 2025"
      FontFamily="Arial">

    <DockPanel LastChildFill="True" Background="White">
        <!-- Top Panel -->
        <Grid DockPanel.Dock="Top" Background="#FF241D70" Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button Content="Назад" 
                    Click="BackButton_Click" 
                    Grid.Column="0" 
                    Margin="10,15,0,10" 
                    Foreground="White" 
                    Background="#FFFDC100"
                    HorizontalAlignment="Left" 
                    Width="80" Grid.ColumnSpan="2" BorderBrush="{x:Null}"/>

            <!-- Title -->
            <TextBlock Text="MARATHON SKILLS 2025" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="White"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       Grid.Column="1"/>

            <!-- Logout Button -->
            <Button Content="Logout" 
                    HorizontalAlignment="Left" 
                    Click="LogoutButton_Click" 
                    Grid.Column="1" 
                    Margin="716,14,0,10" 
                    Width="69" 
                    Foreground="White" 
                    Background="#FFFDC100" BorderBrush="{x:Null}"/>
        </Grid>

        <!-- Bottom Panel -->
        <Grid DockPanel.Dock="Bottom" Background="#FF241D70" Height="30">
            <TextBlock x:Name="CountdownTextBlock" 
                       FontSize="14"
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- Main Content -->
        <Grid Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel x:Name="MainStackPanel">
                    <!-- Title -->
                    <TextBlock Text="Мои спонсоры" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="Black" 
                               HorizontalAlignment="Center" 
                               Margin="0,10"/>
                    <TextBlock Text="Здесь показаны все ваши спонсоры в Marathon Skills 2025."
                               FontSize="16" 
                               Foreground="Black" 
                               HorizontalAlignment="Center" 
                               Margin="0,10"/>

                    <Grid Margin="0,30,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Charity Info -->
                        <StackPanel x:Name="CharityPanel" 
                                     Grid.Column="0" 
                                     Margin="20">
                            <TextBlock x:Name="CharityNameTextBlock" 
                                       Text="Наименование благотворительной организации"
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="Black"
                                       TextAlignment="Center" 
                                       Margin="0,0,0,10"/>

                            <Border BorderBrush="#FDC100" 
                                    BorderThickness="1" 
                                    Width="140" 
                                    Height="140" 
                                    HorizontalAlignment="Center"
                                    CornerRadius="70">
                                <Image x:Name="LogoImage" 
                                       Stretch="Uniform" 
                                       MaxHeight="120" 
                                       MaxWidth="120"/>
                            </Border>

                            <TextBlock x:Name="CharityDescriptionTextBlock" 
                                       Text="Это было бы длинным описанием благотворительности. Это могло пойти для нескольких параграфов.\n\nЭто — больше описания здесь, и это — ещё часть описания также."
                                       FontSize="14" 
                                       Foreground="Black" 
                                       TextWrapping="Wrap"
                                       TextAlignment="Left" 
                                       Margin="0,10"/>
                        </StackPanel>

                        <!-- Sponsors List -->
                        <StackPanel x:Name="SponsorsPanel" 
                                    Grid.Column="1" 
                                    Margin="20"
                                    >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!-- Headers -->
                                <TextBlock Text="Спонсор" 
                                           FontWeight="Bold" 
                                           Foreground="Black" 
                                           Grid.Column="0"/>
                                <TextBlock Text="Взнос" 
                                           FontWeight="Bold" 
                                           Foreground="Black" 
                                           Grid.Column="1" 
                                           HorizontalAlignment="Right"/>

                                <!-- List -->
                                <StackPanel x:Name="SponsorsListPanel" 
                                            Grid.Row="1" 
                                            Grid.ColumnSpan="2" 
                                            Margin="0,5,0,0">
                                    <ItemsControl x:Name="SponsorsItemsControl">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding SponsorName}" 
                                                               Foreground="Black"  FontSize="14"/>
                                                    <TextBlock Text="{Binding Amount, StringFormat='{}{0:C}'}" 
                                                               HorizontalAlignment="Right" 
                                                               Foreground="Black"
                                                               Grid.Column="1" FontSize="14"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Total -->
                                <StackPanel Grid.Row="1" 
                                            Grid.ColumnSpan="2" 
                                            VerticalAlignment="Bottom" 
                                            Margin="0,20,0,0">
                                    <Separator Margin="0,10"/>
                                    <TextBlock x:Name="TotalAmountTextBlock" 
                                               Text="Всего  $680" 
                                               FontSize="18" 
                                               FontWeight="Bold"
                                               Foreground="#FDC100" 
                                               HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Page>
