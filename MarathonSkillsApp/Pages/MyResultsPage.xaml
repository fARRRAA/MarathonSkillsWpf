<Page x:Class="MarathonSkillsApp.Pages.MyResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Мои результаты"
      FontFamily="Arial">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.Row="0" Background="#241D70">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="Back_btn" 
                        Content="Назад" 
                        Width="80" 
                        Height="30"
                        Margin="10,0,0,0"
                        Background="#FDC100"
                        Foreground="White"
                        FontSize="14"
                        Click="Back_btn_Click"/>

                <TextBlock Grid.Column="1" 
                           Text="MARATHON SKILLS 2025"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <Button x:Name="LogOut_btn"
                        Grid.Column="2"
                        Content="Выйти"
                        Width="80"
                        Height="30"
                        Margin="0,0,10,0"
                        Background="#FDC100"
                        Foreground="White"
                        FontSize="14"
                        Click="LogOut_btn_Click"/>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Border Grid.Row="1" Background="White" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Мои результаты"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock Grid.Row="1"
                           Text="Это - список всех ваших прошлых результатов гонки для Marathon Skills. Общее место сравнивает всех бегунов. Место по категории сравнивает бегунов в одной гендерной и возрастной категории."
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           FontSize="14"
                           Margin="0,0,0,15"
                           Width="700"
                           HorizontalAlignment="Center"/>

                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15">
                    <TextBlock x:Name="GenderTextBlock" 
                               Text="Пол: " 
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,0,15,0"/>
                    <TextBlock x:Name="AgeCategoryTextBlock" 
                               Text="Возрастная категория: " 
                               FontSize="14"
                               FontWeight="Bold"/>
                </StackPanel>

                <Border Grid.Row="3" 
                        Background="White" 
                        CornerRadius="5"
                        Padding="1"
                        Margin="0,0,0,15">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                  VerticalScrollBarVisibility="Auto">
                        <Grid Width="750">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" 
                                    Background="#241D70" 
                                    CornerRadius="3,3,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="Марафон" 
                                               Foreground="White"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" 
                                               Text="Дистанция" 
                                               Foreground="White"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="2" 
                                               Text="Время" 
                                               Foreground="White"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="3" 
                                               Text="Общее место" 
                                               Foreground="White"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="4" 
                                               Text="Категория" 
                                               Foreground="White"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <ItemsControl Grid.Row="1" 
                                          x:Name="ResultsPanel"
                                          Background="White">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#DDD" 
                                                BorderThickness="0,0,0,1"
                                                Padding="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Marathon}"
                                                           HorizontalAlignment="Center"/>

                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding Distance}"
                                                           HorizontalAlignment="Center"/>

                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding Time}"
                                                           HorizontalAlignment="Center"/>

                                                <TextBlock Grid.Column="3" 
                                                           Text="{Binding OverallRank}"
                                                           HorizontalAlignment="Center"/>

                                                <TextBlock Grid.Column="4" 
                                                           Text="{Binding CategoryRank}"
                                                           HorizontalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <Button Grid.Row="4"
                        x:Name="PrevResults"
                        Content="Показать все результаты"
                        Width="200"
                        Height="35"
                        Background="#FF00903E"
                        Foreground="White"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Click="PrevResults_Click"/>
            </Grid>
        </Border>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" Background="#241D70">
            <TextBlock x:Name="CountdownTextBlock"
                       Text="18 дней 8 часов и 17 минут до старта марафона!"
                       Foreground="White"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Page>