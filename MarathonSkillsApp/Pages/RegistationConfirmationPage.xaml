<Page x:Class="MarathonSkillsApp.Pages.RegistationConfirmationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkillsApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="RegistationConfirmationPage">

    <DockPanel LastChildFill="True">
        <!-- Top Panel -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#FF241D70" Height="50">
            <Button x:Name="Back_btn" Click="Back_btn_Click" Content="Назад" Width="100" Height="30" Margin="10,10,0,10" Background="#FDC100" Foreground="White"/>
            <TextBlock Text="MARATHON SKILLS 2025" FontSize="18" FontWeight="Bold" Foreground="White"
                       VerticalAlignment="Center" Margin="20,0,0,0"/>
            <Button x:Name="Logout" Click="Logout_Click" Content="Выйти" Width="100" Height="30" Margin="350,10,0,10" Background="#FDC100" HorizontalAlignment="Right" Foreground="White"/>
        </StackPanel>

        <!-- Bottom Panel -->
        <Grid DockPanel.Dock="Bottom" Background="#FF241D70" Height="30">
            <TextBlock x:Name="CountdownTextBlock" FontSize="14"
                       Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
        </Grid>

        <!-- Main Content -->
        <Grid Background="White">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Спасибо за вашу регистрацию в качестве бегуна!" FontSize="24" FontWeight="Bold"
                           Foreground="#FF1F1F1F" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <TextBlock Text="Спасибо за вашу регистрацию в качестве бегуна в Marathon Skills 2025!" FontSize="16"
                           Foreground="#FF0E0B0B" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,5"/>
                <TextBlock Text="С вами свяжутся по поводу оплаты." FontSize="16"
                           Foreground="#FF120505" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,5"/>

                <Button x:Name="OK_btn" Click="OK_btn_Click" Content="OK" Width="100" Height="30" Background="#FF00903E" Margin="0,30" Foreground="White"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Page>
