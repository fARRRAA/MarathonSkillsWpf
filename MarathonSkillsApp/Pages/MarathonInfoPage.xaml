<Page x:Class="MarathonSkillsApp.Pages.MarathonInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkillsApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="MarathonInfoPage">

    <DockPanel LastChildFill="True">
        <!-- Top Panel -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#FF241D70" Height="50">
            <Button x:Name="Back_btn" Click="Back_btn_Click" Content="Назад" Width="100" Height="30" Margin="10,10,0,10" Background="#FDC100" Foreground="White" BorderBrush="{x:Null}"/>
            <TextBlock Text="MARATHON SKILLS 2025" FontSize="18" FontWeight="Bold" Foreground="White"
                       VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Bottom Panel -->
        <Grid DockPanel.Dock="Bottom" Background="#FF241D70" Height="30">
            <TextBlock x:Name="CountdownTextBlock"  FontSize="14"
                       Foreground="#E0E0E0" VerticalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
        </Grid>

        <!-- Main Content -->
        <Grid Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Информация о Marathon Skills 2025" FontSize="24" FontWeight="Bold"
                       Foreground="Black" HorizontalAlignment="Center" Margin="0,20"/>

            <!-- Left Side -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="20,0,0,0">
                <!-- Map -->
                <Border Width="200" Height="100" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
                    <Image Source="/Resourses/marathon-skills-2016-marathon-map.jpg"
                Stretch="UniformToFill" MouseDown="Image_MouseDown"/>
                </Border>
                <!-- Photo Grid -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Width="90" Height="70" BorderBrush="Gray" BorderThickness="1"
                            Margin="5">
                        <Image Source="/Resourses/banco-banespa.jpg" Stretch="UniformToFill"/>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" Width="90" Height="70" BorderBrush="Gray" BorderThickness="1"
                            Margin="5">
                        <Image Source="/Resourses/ibirapuera-park-lake.jpg" Stretch="UniformToFill"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="0" Width="90" Height="70" BorderBrush="Gray" BorderThickness="1"
                            Margin="5">
                        <Image Source="/Resourses/teatro-municipal.jpg" Stretch="UniformToFill"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" Width="90" Height="70" BorderBrush="Gray" BorderThickness="1"
                            Margin="5">
                        <Image Source="/Resourses/marathon-image.jpg" Stretch="UniformToFill"/>
                    </Border>
                </Grid>
            </StackPanel>
            <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="20">
                <!-- Right Side -->
            <StackPanel >
                          
                    <TextBlock x:Name="InfoTextBlock" 
                    FontSize="14" Foreground="Black" TextWrapping="Wrap" Margin="0,0,0,10"/>
                
                <!-- Description -->

            </StackPanel>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Page>
