<Page x:Class="MarathonSkillsApp.Pages.CharityManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkillsApp.Pages"
                    xmlns:hc="https://handyorg.github.io/handycontrol"

      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="CharityManagementPage"
      FontFamily="Arial">

    <Page.Resources>
        <!-- Basic text styles -->
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- List item style -->
        <Style x:Key="CharityItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1"
                                CornerRadius="5"
                                Padding="0">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#2B2B6F"/>
                                <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#2B2B6F"/>
                                <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2B2B6F" Padding="10">
            <Grid>
                <Button x:Name="BackButton" 
                        Content="Назад" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center"
                        Click="BackButton_Click"
                        Margin="10"
                        Width="80"
                        Height="30"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="{x:Null}"/>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="MARATHON SKILLS 2025" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Управление благотворительными организациями"
                               FontSize="18"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20" Margin="10,95,-10,5" Grid.RowSpan="2">
            <StackPanel Width="700" HorizontalAlignment="Center">
                <!-- Add New Button -->
                <Button Content="+ Добавить организацию" 
                        HorizontalAlignment="Right" 
                        Click="AddCharity_Click" 
                        Margin="0,0,0,20"
                        Width="220"
                        Height="35"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="#00903E"/>

                <!-- Charity List -->
                <ListView ItemsSource="{Binding Charities}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Background="Transparent"
                          BorderThickness="0"
                          Margin="0,0,0,0"
                          Height="400">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Фото" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding LogoPath}" Width="60" Height="60" Stretch="Uniform"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Название" Width="180" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Описание" Width="300">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" MaxHeight="60"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Изменить" Click="EditCharity_Click" Tag="{Binding Id}" DataContext="{Binding}" Width="80" Height="30"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#2B2B6F">
            <TextBlock x:Name="CountdownText"
                       FontSize="14"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>