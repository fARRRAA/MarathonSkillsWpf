<Page x:Class="MarathonSkillsApp.Pages.SponsorConfirmationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkillsApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Sponsor Confirmation Page">
    <DockPanel LastChildFill="True">
        <!-- Top Panel -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#FF241D70" Height="50">
            <Button x:Name="Btn_back" Click="Btn_back_Click" Content="Назад" Width="100" Height="30" Margin="10,10,0,10" Background="#FDC100" Foreground="White" BorderBrush="{x:Null}"/>
            <TextBlock Text="MARATHON SKILLS 2025" FontSize="18" FontWeight="Bold" Foreground="White"
                       VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Bottom Panel -->
        <Grid DockPanel.Dock="Bottom" Background="#FF241D70" Height="30">
            <TextBlock x:Name="CountdownTextBlock" FontSize="14"
                       Foreground="#E0E0E0" VerticalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>

        <!-- Main Content -->
        <Grid Background="White">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Спасибо за вашу спонсорскую поддержку!" FontSize="24" FontWeight="Bold"
                           Foreground="Black" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <TextBlock Text="Спасибо за поддержку бегуна в Marathon Skills 2025!" FontSize="16"
                           Foreground="Black" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,5"/>
                <TextBlock Text="Ваше пожертвование пойдет в его благотворительную организацию" FontSize="16"
                           Foreground="Black" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,5"/>

                <TextBlock x:Name="RunnerInfoTextBlock" Text="Иван Прудов(204) из Russia" FontSize="20" FontWeight="Bold"
                           Foreground="Black" HorizontalAlignment="Center" Margin="0,20"/>
                <TextBlock x:Name="CharityNameTextBlock" Text="Фонд кошек" FontSize="18" Foreground="Black" HorizontalAlignment="Center"
                           Margin="0,5"/>

                <TextBlock x:Name="AmountTextBlock" Text="$50" FontSize="48" FontWeight="Bold" Foreground="Black"
                           HorizontalAlignment="Center" Margin="0,20"/>

                <Button x:Name="Back_btn" Click="Back_btn_Click" Content="Назад" Width="100" Height="30" Background="#FF00903E" Margin="0,30" Foreground="White"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Page>
